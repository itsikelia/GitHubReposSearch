@model IEnumerable<GitHubReposSearch.Models.GitRepository>

@{
    ViewBag.Title = "SearchInfo";
}

<h2>SearchInfo</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bookmarked)
        </th>
        <th>@Html.DisplayNameFor(model => model.owner.name)</th>
        <th>@Html.DisplayNameFor(model => model.owner.avatar)</th>
    </tr>

@foreach (var item in Model) {
    <tr id="@item.name+@item.owner.name">
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.CheckBoxFor(modelItem => item.bookmarked, new { @class = "BookMarked", @checked=item.bookmarked})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.owner.name)
        </td>
        <td>
            <img src="@item.owner.avatar" class="avatar" />
        </td>
    </tr>
}

</table>








